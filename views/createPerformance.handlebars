<h3>Add New Performance</h3>

<form id="createperformance" action="/createPerformance" method="post">
    <br>
    Date:
    <input type="date" name="performanceDate">
    <br>
    Player:
    <select name="player">
        {{#each player}}
        <option value="{{this.id}}">{{this.fName}} {{this.lname}} - {{this.basketballTeam}}</option>
        {{/each}}
    </select>
    <br>
    FGM
    <input type="number" name="FGM">
    <br>
    FGA
    <input type="number" name="FGA">
    <br>
    FTM
    <input type="number" name="FTM">
    <br>
    FTA
    <input type="number" name="FTA">
    <br>
    Points
    <input type="number" name="Points">
    <br>
    Assists
    <input type="number" name="Assists">
    <br>
    Rebounds
    <input type="number" name="Rebounds">
    <br>
    Steals
    <input type="number" name="Steals">
    <br>
    Blocks
    <input type="number" name="Blocks">
    <br>
    Turnovers
    <input type="number" name="Turnovers">
    <br>
    <input type="submit" value="Submit">
</form>

{{status}}


<h3>Current Performances</h3>
<table id="create">
    <tr>
        <th>PlayerId</th>
        <th>Date</th>
        <th>FGM</th>
        <th>FGA</th>
        <th>FTM</th>
        <th>FTA</th>
        <th>Points</th>
        <th>Assists</th>
        <th>Rebounds</th>
        <th>Steals</th>
        <th>Blocks</th>
        <th>Turnovers</th>
    </tr>
{{#each performance}}
    <tr>
        <td>{{this.playerId}}</td>
        <td>{{this.date}}</td>
        <td>{{this.FGM}}</td>
        <td>{{this.FGA}}</td>
        <td>{{this.FTM}}</td>
        <td>{{this.FTA}}</td>
        <td>{{this.points}}</td>
        <td>{{this.assists}}</td>
        <td>{{this.rebounds}}</td>
        <td>{{this.steals}}</td>
        <td>{{this.blocks}}</td>
        <td>{{this.turnovers}}</td>
    </tr>
{{/each}}
</table>