<h3>Create New Matchups</h3>

<form id="creatematchup" action="/createMatchup" method="post">
    <br>
    Week:
    <select name="Week">
        {{#each week}}
        <option value="{{this.weekId}}">{{this.weekId}}: {{this.startDate}} - {{this.endDate}}</option>
        {{/each}}
    </select>
    <br>
    Home Team:
    <select name="homeTeam">
        {{#each team}}
        <option value="{{this.id}}">{{this.fantasyTeamName}}</option>
        {{/each}}
    </select>
    <br>
    Away Team:
    <select name="awayTeam">
        {{#each team}}
        <option value="{{this.id}}">{{this.fantasyTeamName}}</option>
        {{/each}}
    </select>
    <br>
    <input type="submit" value="Submit">
</form>

{{status}}

<h3>Current Matchups</h3>
<table id="create">
    <tr>
        <th>Home Team</th>
        <th>Away Team</th>
        <th>Week</th>
    </tr>
{{#each matchup}}
    <tr>
        <td>{{this.homeTeam}}</td>
        <td>{{this.awayTeam}}</td>
        <td>{{this.week}}</td>
    </tr>
{{/each}}
</table>